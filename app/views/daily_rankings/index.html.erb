<div class="page_header">
	<div id="title">
		<%= link_to "Hits Stream",root_path %>
	</div>
	<div id="description" class="tooltip">
		<p>
			Hits Streamとは？
		</p>
		<span>
			iTunesの楽曲ランキングに応じたYouTube動画を<br>自動再生する無料BGMサイトです
		</span>
	</div>
	<div id="date_label">
		Aggregate Date
	</div>
	<div id="genre_label">
		Genre
	</div>
	<div id="select_form">
		<%= form_tag("/daily_rankings/result", :remote => true, :method => "post" ) do %>
		<%= select_tag(:target_date_id, options_from_collection_for_select(@list_dates.order("aggregate_date_id DESC"), :aggregate_date_id, :this_date, @target_date_id), :id => "select_tag" )%>
		<%= select_tag(:itune_id, options_from_collection_for_select(@list_genres.order("itune_id"), :itune_id, :genre, @genre), :id => "select_tag")%>
		<%= submit_tag("Select", :id => "submit_tag") %>
		<% end %>
	</div>
</div>

<div id="middle">
	<%= render partial: "list", locals: {contents: @view_rankings, running_ranking: @running_ranking} %>
</div>

<div class="page_footer">
	<span id="prev_button" class="footer_button">← PREV</span>
	<span id="play_button" class="footer_button">PLAY ▶</span>
	<span id="next_button" class="footer_button">NEXT →</span>
</div>
